<div class="section border border-dark my-4 m-auto">
	<h4 class="text-center p-2 ">
		Mes emprunts en attente de validation
	</h4>

	<div class="container d-flex w-100  justify-content-center">
		<div class="row justify-content-start w-100">
			{% if pendingloans is empty %}
				<span class="text-center">Aucune demande en cours.</span>
			{% endif %}

			{% for pendingloan in pendingloans %}
				{% set loan = pendingloan %}
				{% include "/Myaccount/_borrowcard.html.twig" %}
			{% endfor %}
		</div>
	</div>
</div>

