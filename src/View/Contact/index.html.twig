{% extends 'layout.html.twig' %}

{% block content %}

<div class="container-fluid d-md-flex p-0">

	{% include 'components/_navAdmin.html.twig' %}

	<section class="m-5">
		<h1 class="text-center">Les messages</h1>

		<table class="mt-3 table table-striped">
			<thead>
				<tr>
					<th>ID</th>
					<th>Prénom</th>
					<th>Nom</th>
					<th>Email</th>
					<th colspan="2">Status</th>
				</tr>
			</thead>
			<tbody>
				{% for contact in contacts %}
					<tr>
						<td>{{ contact.id }}</td>
						<td>{{ contact.firstname}}</td>
						<td>{{ contact.lastname }}</td>
						<td>{{ contact.email }}</td>
						{% if contact.isRead %}
							<td class="text-success">
								<strong>
									● Déja lu
								</strong>
							</td>
						{% else %}
							<td class="text-danger">
								<strong>
									● Non lu
								</strong>
							</td>
						{% endif %}

					</tr>
					<tr>
						<td class="messageCell" colspan="4">{{ contact.message }}
						</td>
						<td rowspan="2">
							<a href="/contact/isread?id={{ contact.id }}">
								{% if contact.isRead %}
									Marquer comme non lu
								{% else %}
									Marquer comme lu
								{% endif %}
							</a>
						</td>
					</tr>
				</td>
			</tbody>
		</tr>
	</a>
</tbody></td></tr>{% endfor %}</tbody></table></section></div>{% endblock %}
