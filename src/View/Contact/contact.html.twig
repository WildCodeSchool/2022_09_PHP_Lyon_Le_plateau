{% extends 'layout.html.twig' %}

{% block title %}Contact
{% endblock %}

{% block content %}

	<main>
		<div class='m-3 mb-5 mt-5'>
			<h2 class="text-center">Contactez nous</h1>

			<form method="post" class='form m-3 bg-lightgray p-3 shadow' accept-charset="UTF-8">
				<input type="hidden" value="{{ user.id }}" name="id">

				<div class='container'>
					<div class="row">
						<div class="mb-3 mr-3 col-sm-6">
							<label for="userFirstname" class="form-label mb-0 d-flex justify-content-center">Prénom</label>
							<input type="text" value="{{ user.firstname }}" name="userFirstname" id="firstname" maxlenght="100" class="form-control" required>
						</div>

						<div class="mb-3 col-sm-6">
							<label for="userLastname" class="form-label mb-0 d-flex justify-content-center">Nom</label>
							<input type="text" value="{{ user.lastname }}" name="userLastname" id="lastname" maxlenght="100" class="form-control" required>
						</div>
					</div>


					<div class="mb-3">
						<label for="userEmail" class="form-label mb-0 d-flex justify-content-center">Email</label>
						<input type="text" value="{{ user.email }}" name="userEmail" id="email" maxlenght="100" class="form-control" required>
					</div>

					<div class="mb-3">
						<label for="message" class="form-label mb-0 d-flex justify-content-center">Message</label>
						<textarea class="form-control" id="message" rows="3"></textarea>
					</div>

					{% if errors is defined %}
						<ul class="errors">
							{% for error in errors %}
								<li>{{ error }}</li>
							{% endfor %}
						</ul>
					{% endif %}

					<span class="container d-flex justify-content-center">
						<button class="btn">Envoyer</button>
					</span>
				</div>
			</form>
		</div>

