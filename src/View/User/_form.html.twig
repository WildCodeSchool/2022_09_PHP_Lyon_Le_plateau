<form class="form" method="post">
	<div class="mb-3">
		<label for="userFirstname" class="form-label">Prénom</label>
		<input type="text" value="{{ user.firstname }}" name="userFirstname" id="firstname" maxlenght="100" class="form-control" required>
	</div>

	<div class="mb-3">
		<label for="userLastname" class="form-label">Nom</label>
		<input type="text" value="{{ user.lastname }}" name="userLastname" id="lastname" maxlenght="100" class="form-control" required>
	</div>

	<div class="mb-3">
		<label for="userEmail" class="form-label">Email</label>
		<input type="text" value="{{ user.email }}" name="userEmail" id="email" maxlenght="100" class="form-control" required>
	</div>

	<div class="mb-3">
		<label for="userPassword" class="form-label">Mot de passe</label>
		<input type="text" name="userPassword" id="password" maxlenght="100" class="form-control" required>
	</div>

	<div class="mb-3">
		<label for="userPasswordConfirmation" class="form-label">Confirme le mot de passe</label>
		<input type="text" name="userPasswordConfirmation" id="passwordConfirmation" maxlenght="100" class="form-control" required>
	</div>

	<div class="mb-3">
		<button class="btn btn-primary">Créer</button>
	</div>

</form>
