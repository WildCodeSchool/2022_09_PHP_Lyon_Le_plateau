{% extends 'layout.html.twig' %}

{% block content %}
	{% include 'components/_navAdmin.html.twig' %}

	<a href="/users/add">Ajouter</a>
	<h1>Les utilisateurs</h1>
	<ul>
		{% for user in users %}
			<li>{{ user.id }}.
				{{ user.firstname }}
				{{ user.lastname }}
				/ mail :
				{{ user.email }}
			</li>
			<a href="/users/edit?id={{ user.id }}">Modifier</a>
		{% endfor %}
	</ul>
{% endblock %}
