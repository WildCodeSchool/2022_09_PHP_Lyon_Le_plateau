{% block content %}

	<div class="container">
		<div class="row">
			<div class="col-sm-10 col-md-8 col-lg-6 mb-5 mx-auto d-table">
				<div class="d-table-cell align-middle">
					<form class="form m-3 bg-lightgrey p-3 shadow" method="post">

						<input type="hidden" value="{{ user.id }}" name="id">

						<div class="mb-3">
							<label for="userFirstname" class="form-label d-flex justify-content-center">Pr√©nom *</label>
							<input type="text" value="{{ user.firstname }}" name="userFirstname" id="firstname" maxlength="100" class="form-control">
						</div>

						<div class="mb-3">
							<label for="userLastname" class="form-label d-flex justify-content-center">Nom *</label>
							<input type="text" value="{{ user.lastname }}" name="userLastname" id="lastname" maxlength="100" class="form-control">
						</div>

						<div class="mb-3">
							<label for="userEmail" class="form-label d-flex justify-content-center">Email *</label>
							<input type="text" value="{{ user.email }}" name="userEmail" id="email" maxlength="100" class="form-control">
						</div>

						{% if errors is defined %}
							<div class="text-danger">
								<ul>
									{% for error in errors %}
										<li>{{error}}</li>
									{% endfor %}
								</ul>
							</div>
						{% endif %}

						<div class="mb-3 d-flex justify-content-center">
							<button class="btn tomatoButton">Envoyer</button>
						</div>
						<p class="form-text">
							* Champs obligatoires
						</p>

					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
