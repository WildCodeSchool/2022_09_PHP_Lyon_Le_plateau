<!doctype html>
<html lang="fr">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="x-ua-compatible" content="ie=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<link rel="icon" href="assets/images/logo.png">

		<title>
			{% block title %}{% endblock %}
		</title>

		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
		<link rel="stylesheet" href="/assets/css/style.css"> {% block stylesheet %}{% endblock %}

		</head>
		<body>
			<nav class="navbar navbar-expand-lg">
				<div class="container-fluid">
					<a class="navbar-brand" href="/home">
						<img src="/assets/images/logo.png" class="img-fluid logo" alt="Le plateau">
					</a>
					<div class="icons">
						<a class="nav-link link-dark active d-none" aria-current="page" href="/home">
							<img id="icons-nav" src="/assets/images/ring.png">
						</a>
						<a class="nav-link link-dark active" aria-current="page" href={% if user_session %} "/users/logout" {% else %} "/users/login" {% endif %}>
							<img id="icons-nav" src="{% if user_session %}/assets/images/logout.png {% else %}/assets/images/login.png {% endif %}">
						</a>
						<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
							<span class="navbar-toggler-icon"></span>
						</button>
					</div>
					<div class="collapse navbar-collapse justify-content-end text-center" id="navbarNav">
						<ul class="navbar-nav">
							{% if user_session.admin %}
								<li class="mb-1">
									<a class="nav-link active" id="admin-nav-link" aria-current="page" href="/games/show">Admin</a>
								</li>
							{% endif %}
							<li class="mb-1">
								<a class="nav-link link-dark active" aria-current="page" href="/home">Accueil</a>
							</li>
							<li class="mb-1">
								<a class="nav-link link-dark active" aria-current="page" href="/games?page=1">Les jeux</a>
							</li>
							<li class="mb-1">
								<a class="nav-link link-dark active" aria-current="page" href="/myaccount">Mon compte</a>
							</li>
							<li class="mb-1">
								<a class="nav-link link-dark active" aria-current="page" href="/contact">A propos</a>
							</li>
							<li class="mb-1"></li>
						</ul>
					</div>
				</nav>

				{% block pageTitle %}{% endblock %}
				{% block content %}{% endblock %}
				{% block javascript %}{% endblock %}

				<div class="container-fluid text-center">
					<footer class="footer row d-flex align-items-center">

						<p class="col-md-4 mt-4 mb-2">
							<a href="/home">
								<img src="/assets/images/logo.png" class="img-fluid logo" alt="logo site">
							</a>
						</p>

						<div class="col-md-4 mt-4 mb-2">
							<ul class="list-unstyled mb-0 text-center">
								<li class="mb-1">
									<a href="/home" class="nav-link px-2 link-dark">Accueil</a>
								</li>
								<li class="mb-1">
									<a href="/games?page=1" class="nav-link px-2 link-dark">Les jeux</a>
								</li>
								<li class="mb-1">
									<a href="/myaccount" class="nav-link px-2 link-dark">Mon compte</a>
								</li>
								<li class="mb-1">
									<a href="/contact" class=" nav-link px-2 link-dark">À propos</a>
								</li>
							</ul>
						</div>

						<div href="/" class="col-md-4 mt-4 mb-4">
							Copyright© 2022
						</div>

					</footer>
				</div>
			</body>
		</body>
	</html>
